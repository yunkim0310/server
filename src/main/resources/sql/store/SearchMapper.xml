<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.placeHere.server.dao.store.SearchDao">

    <insert id="addSearch">

        INSERT INTO search (search_keyword)
        VALUES
            <foreach collection="searchKeywordArray" item="searchKeyword" separator=",">
                (#{searchKeyword})
            </foreach>

    </insert>

    <select id="getPopularKeywordList">

        SELECT search_keyword
        FROM search
        WHERE search_time BETWEEN DATE_SUB(NOW(), INTERVAL 1 HOUR) AND NOW()
        GROUP BY search_keyword
        ORDER BY COUNT(*) DESC
        LIMIT 10;

    </select>

</mapper>